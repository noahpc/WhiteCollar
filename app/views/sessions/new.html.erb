<% provide(:title, "Sign in") %>


<% if false %>

    <!-- I used link_to's that looked like buttons because button_to was not sending commit parameter correctly -->
<%= link_to 'I want to be a teacher.', {controller: :sessions, action: :create, id: :teacher},
            method: :post, class: 'btn btn-lg btn-primary btn-block' %>

    <%= link_to 'I want to be a student.', {controller: :sessions, action: :create, id: :student},
                method: :post, class: 'btn btn-lg btn-primary btn-block' %>




<% else %>
<div class="panel panel-default">
	<div class="panel-heading">
  	<h3 class="panel-title">Please Sign In</h3>
 	</div>
	<div class="panel-body">
    <fieldset>
      <%= form_tag sessions_path do %>
    	<div class="form-group">
				<%#= label_tag 'School ID' %>
				<%= text_field_tag 'school_id', '', placeholder: 'School ID' %>
				<%#= label_tag 'password' %>
				<%= password_field_tag :password, '', placeholder: 'Password' %>
    	</div>
  		<%= submit_tag("Sign in", class:"btn btn-lg btn-primary btn-block") %>
  		<% end %>
  	</fieldset>
  </div>
</div>

<% end %>