<% if get_selected_project.is_active == false %>
   <p class='alert-notice'>You must switch to an active project to assign clients.</p>
<% end%>

<table class="display assign_table" id="client_list">
  <thead>
  <tr>
    <th>Owner</th>
    <th>Business name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Telephone</th>
    <th>Contact title</th>
    <th>First name</th>
    <th>Last name</th>
    <th>E-mail</th>
    <th>Comment</th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
      <tr>
            <td>
              <% if ticket.id %>
                  <% if get_selected_project.is_active == true %>
                     <% if ticket.student_fname %>
                         <%= (ticket.student_fname + ' ' +  ticket.student_lname + '<br />(' + ticket.student_id + ')').html_safe %>
                      <% else %>
                         <%= link_to 'Assign', clients_assign_path(:tid => ticket.id), {:id => ticket.id, :class => 'btn btn-link btn-sm assign'} %>
                      <% end %>
                  <% else%>
                      <%= link_to 'Assign', clients_assign_path(:tid => ticket.id), {:id => ticket.id, :class => 'btn btn-link btn-sm assign', disabled: true }%>
                   <% end %>
              <% else %>
                  <%= 'Ticket does not exist for this client' %>
              <% end %>
            </td>        
        <td><%= link_to ticket.business_name, client_path(ticket.client_id, page: request.url) %></td>
        <td><%= ticket.address %></td>
        <td><%= ticket.city %></td>
        <td><%= ticket.state %></td>
        <td><%= ticket.zipcode %></td>
        <td><%= render_phone(ticket.telephone) %></td>
        <td><%= ticket.contact_title %></td>
        <td><%= ticket.contact_fname %></td>
        <td><%= ticket.contact_lname %></td>
        <td><%= ticket.email %></td>
        <td><%= tooltipify(ticket.comment)%></td>

      </tr>
  <% end %>
  </tbody>
</table>
