<% if @message %>
  <%= @message %>
<% end %>


<% provide(:title, "Assign Clients") %>

<% if current_user.help == true %>
	<h1>First Time User?</h1>

	<%= button_to "Yes", :controller => :users, action: "need_help"%>

<% end %>

<h1 id="heading">Assign Clients</h1>

<table class="display">
  <thead>
    <tr>
      <th>Business name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Contact title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Telephone</th>
      <th>Comment</th>
      <% if (project = get_selected_project).is_active == true %>
        <th></th>
    <% end %>
    <th>details</th>
  </tr>
  </thead>

  <tbody>
	<% @tickets.each do |ticket| %>
	  <tr>    
      	<td><%= ticket.business_name %></td>
        <td><%= ticket.address %></td>
        <td><%= ticket.email %></td>
        <td><%= ticket.contact_title %></td>
        <td><%= ticket.contact_fname %></td>
        <td><%= ticket.contact_lname %></td>
        <td><%= ticket.telephone %></td>
        <td><%= ticket.comment %></td>
        <% if project.is_active == true %>
	      <td>
	        <% if ticket.id %>
	          <% if ticket.student_fname %>
	          	<%= (ticket.student_fname + " " +  ticket.student_lname + "<br />(" + ticket.student_id + ")").html_safe %>
	          <% else %>
	          	<%= link_to 'assign', clients_assign_path(:tid => ticket.id), {:id => ticket.id, :class => "btn btn-info btn-sm"} %>
	          <% end %>
	        <% else %> 
	          <%= "Ticket does not exist for this client" %>	          
	        <% end %>
          </td>
        <% end %>
        <td><%= link_to 'details', client_path(:id => ticket.id), {:id => ticket.id, :class => "btn btn-info btn-sm"} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
