<p id="notice"><%= notice %></p>

<p>
  <strong>Business name:</strong>
  <%= @client.business_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @client.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @client.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @client.state %>
</p>

<p>
  <strong>Zipcode:</strong>
  <%= @client.zipcode%>
</p>

<p>
  <strong>Contact name:</strong>
  <%= @client.contact_title + ' ' + @client.contact_fname + ' ' + @client.contact_lname %>
</p>

<p>
  <strong>Telephone:</strong>
  <%= @client.telephone %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @client.comment %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @client.submitter %>
</p>

<% if (current_user.role == 3 || current_user.school_id == @client.submitter) %>
	<%= link_to 'Edit', edit_client_path(@client, where: 'not_from_student'), :class => 'btn btn-large btn-primary btn-sm' %>
<% end %>
<% if params[:not_from_student] == 'yes' %>
	<%= link_to 'Back to Assign Clients', clients_path, :class => 'btn btn-large btn-primary btn-sm' %>
<% else %>
	<%= link_to 'Back to Client', receipt_path(params[:receipt]), :class => 'btn btn-large btn-primary btn-sm' %>
<% end %>
