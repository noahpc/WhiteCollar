
<table class="display">
  <thead>
  <tr>
    <% if current_user.role == 3%>
        <th class="empty"></th>
    <% end %>
    <th>Business name</th>
    <th>Address</th>
    <th>Title</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Telephone</th>
    <th>Comment</th>
    <th>Owner</th>
    <th class="empty"></th>
 	<th class="empty"></th>
  </tr>
  </thead>

  <tbody>
  <% pending_clients.each do |client|%>
      <tr>
        <% if current_user.role == 3 %>
            <td><%= check_box_tag 'clients[]', client.id %></td>
        <% end %>
        <td><%= client.business_name %></td>
        <td><%= client.address %></td>
        <td><%= client.contact_title %></td>
        <td><%= client.contact_fname %></td>
        <td><%= client.contact_lname %></td>
        <td><%= client.telephone %></td>
        <td><%= client.comment %></td>
        <td><%= client.submitter %></td>
        <td><%= link_to 'Details', client %></td>
        <% if (current_user.role == 3) || (current_user.id == client.submitter) %>
        	<td><%= link_to 'Edit', edit_client_path(client) %></td>
        <% else %>
            <td></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
