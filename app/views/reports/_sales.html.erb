<table class ="table dataTable">
<thead>
<tr>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Student Manager</th>
  <th>Section</th>
  <th>Date/Time sale was reported</th>
  <th>Company</th>
  <th>Page Size</th>
  <th>Sales</th>
  <th>Payment</th>
  <th>Ad/Status</th>    	      	      	      	      
</tr>
</thead>
<tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td align ="center"><%= link_to sale.first_name, "/receipts/my_receipts/#{sale.student_id}"%></td>
        <td align ="center"><%= link_to sale.last_name, "/receipts/my_receipts/#{sale.student_id}"%></td>
        <td align ="center"><%= sale.team_leader%></td>
        <td align ="center"><%= sale.section %></td>
        <td align ="center"><%= sale.time_of_sale%></td>
        <td align ="center"><%= sale.company%></td>
        <td align ="center"><%= sale.page_size%></td>
        <td align ="center"><%= sale.sale_amount%></td>
        <td align ="center"><%= sale.payment_type%></td>
        <td align ="center"><%= sale.ad_status%></td>
      </tr> 
    <% end %>
    </tbody>
    <tfoot>
          <tr>
      <td align ="center">Totals</td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"><%= @sale_total %></td>
      <td align ="center"></td>
      <td align ="center"></td>
            </tr> 
    </tfoot>
</table>