<table class ="table dataTable">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Student Manager</th>
      <th>Section</th>
      <th>Open Clients</th>
      <th>Sold Clients</th>
      <th>Released Clients</th>
      <th>Sales Total</th>
      <th>Points</th>
      <th>Last Student Activity</th>     	      	      	      	      
    </tr>
  </thead>
  <tbody>
  <% open_clients = 0 %>
        <% @student_array.each do |student| %>
          <tr>
            <td><%= link_to student.first_name, "/receipts/my_receipts/#{student.id}" %></td>
            <td><%= link_to student.last_name, "/receipts/my_receipts/#{student.id}" %></td>
            <td><%= student.student_manager %></td>
            <td><%= student.section %></td>
            <td><%= student.open%></td>
            <td><%= student.sold %></td>
            <td><%= student.released %></td>
            <td><%= student.sales %></td>
            <td><%= student.points %></td>
            <td><%= student.last_activity %></td>                            
          </tr>
        <% end %>
            <td>Totals</td>
            <td></td>
            <td></td>
            <td></td>
            <td><%= @student_totals.total_open%></td>
            <td><%= @student_totals.total_sold %></td>
            <td><%= @student_totals.total_released %></td>
            <td><%= @student_totals.total_sales %></td>
            <td><%= @student_totals.total_points %></td>
            <td></td>
            <td></td>                           
          </tr>
      </tbody>
    </table>
