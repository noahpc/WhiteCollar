<table class ="display">
  <thead>
    <tr>
      <th>Created Date</th>
      <th>Bonus Points</th>
      <th>Bonus Comment</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Student ID</th>
      <th>Team Name</th>
      <th>Section Number</th>
    </tr>
  </thead>
  <% i = 0 %>
  <tbody>
    <% @bonuses.each do |b| %>
      <tr>
        <td align ="center"><%= b.created_date %></td>
        <td align ="center"><%= b.points %></td>
        <td align ="center"><%= b.comment %></td>
      </tr> 
      <% @bonuses[i].each do |c| %>
        <tr>
          <td align ="center"><%= c.first_name %></td>
          <td align ="center"><%= c.last_name %></td>
          <td align ="center"><%= c.student_id %></td>
          <td align ="center"><%= c.team_name %></td>
          <td align ="center"><%= c.section_number %></td>
        </tr>        
      <% end %>
      <% i = i + 1 %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td align ="center">Total</td>
      <td align ="center"><%= @bonus_total_points %></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
      <td align ="center"></td>
    </tr> 
  </tfoot>
</table>