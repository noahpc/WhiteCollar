<table class ="display">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <% if current_user.role == 3 %>
        <th>Student Manager</th>
        <th>Section</th>
      <% end %>
      <th>Open Clients</th>
      <th>Sold Clients</th>
      <th>Released Clients</th>
      <th>Sales Total</th>
      <th>Points</th>
      <th>Last Student Activity</th>     	      	      	      	      
    </tr>
  </thead>
  <tbody>
    <% if @student_array.present? %>
    <% @student_array.each do |student| %>
      <tr>
        <% if current_user.role == 3 %>
          <td align ="center"><%= link_to student.first_name, my_receipts_path(id: student.id, page: request.url) %></td>
          <td align ="center"><%= link_to student.last_name, my_receipts_path(id: student.id, page: request.url) %></td>
          <td align ="center"><%= student.student_manager %></td>
          <td align ="center"><%= student.section %></td>
        <% else %>
          <td align ="center"><%= student.first_name %></td>
          <td align ="center"><%= student.last_name %></td>
        <% end %>        
        <td align ="center"><%= student.open%></td>
        <td align ="center"><%= student.sold %></td>
        <td align ="center"><%= student.released %></td>
        <td align ="center"><%= student.sales %></td>
        <td align ="center"><%= student.points %></td>
        <% if student.last_activity.present? %>
        	<td align ="center"><%= time_ago_in_words(student.last_activity) + ' ago' %></td>
        <% else %>
        	<td></td>
        <% end %>
      </tr>                           
    <% end %>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td align ="center">Totals</td>
    <td align ="center"></td>
    <% if current_user.role == 3 %>
      <td align ="center"></td>
      <td align ="center"></td>
    <% end %>
    <td align ="center"><%= @student_totals.total_open%></td>
    <td align ="center"><%= @student_totals.total_sold %></td>
    <td align ="center"><%= @student_totals.total_released %></td>
    <td align ="center"><%= @student_totals.total_sales %></td>
    <td align ="center"><%= @student_totals.total_points %></td>
    <td align ="center"></td>
  </tr>
  </tfoot>
</table>
