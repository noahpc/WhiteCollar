<table class ="display default_table">
  <thead>
    <tr>
      <th>Team Name</td>
      <% if current_user.role == TEACHER %>
        <th>Section</td>
      <% end %>
      <th>Open Clients</td>
      <th>Sold Clients</td>
      <th>Released Clients</td>
      <th>Sales Total</td>
      <th>Points</td>
    </tr>
  </thead>
  <tbody>
    <% @team_data.each do |team_data| %>
      <tr>
        <td align ="left"><%= team_data.student_manager %></td>
        <% if current_user.role == TEACHER %>
          <td align ="center"><%= team_data.section %></td>
        <% end %>
        <td align ="center"><%= team_data.open %></td>
        <td align ="center"><%= team_data.sold %></td>
        <td align ="center"><%= team_data.released %></td>
        <td align ="right"><%= number_with_precision(team_data.sales, precision: 2) %></td>
        <td align ="right"><%= team_data.points %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td align ="center">Totals</td>
      <% if current_user.role == TEACHER %>
        <td align ="center"></td>
      <% end %>
      <td align ="center"><%= @team_totals.total_open%></td>
      <td align ="center"><%= @team_totals.total_sold %></td>
      <td align ="center"><%= @team_totals.total_released %></td>
      <td align ="right"><%= number_with_precision(@team_totals.total_sales, precision: 2) %></td>
      <td align ="right"><%= @team_totals.total_points %></td>
    </tr>
  </tfoot>
</table>