<!-- Here is huge table of all the students -->
<table id="manageSection" class="display default_table">

  <thead>
	<tr>
    <% if @selected_section != "all"%>
	    <th class='empty'></th>
    <% end %>
	  <th>First Name</th>
	  <th>Last Name</th>
	  <th>ID number</th>
	  <th>Email</th>
	  <th>Phone</th>
	  <th>Student Manager</th>
	  <th>Section</th>
	  <th>Major</th>
	  <th>Minor</th>
	  <th>Box</th>
	  <th>Class</th>
	  <% unless archived? %>
	  <th>Active?</th>
	  <% end %>     	      	      	      	      
	  <th class="empty"></th>
	</tr>
  </thead>
  <tbody>
    <% current_students.each do |student| %>
      <tr>
        <% if @selected_section != "all"%>
          <% if !Member.is_team_leader(Member.find_by(project_id: get_selected_project, user_id: student.id)) %>
            <% if student.student_manager_name %>
              <td><input class="students_with_manager" name="students[]" type="checkbox" value="<%=student.id%>" /></td>
            <% else  %>
              <td><input class="students_without_manager" name="students[]" type="checkbox" value="<%=student.id%>"/></td>
            <% end %>
          <% else %>
            <td><input id="students_managers" class="student_managers" name="students[]" type="checkbox" value="<%=student.id%>"/></td>
          <% end %>
        <% end %> 
        <td><%= link_to student.first_name, my_receipts_path(id: student.id, page: request.url) %></td>
        <td><%= link_to student.last_name, my_receipts_path(id: student.id, page: request.url) %></td>
        <td><%= student.school_id %></td>
        <td><%= student.email %></td>
        <td><%= student.phone %></td>                
        <td><%= student.student_manager_name %></td>
        <td><%= student.section_number %></td>
        <td><%= student.major %></td>
        <td><%= student.minor %></td>
        <td><%= student.box %></td>
        <td><%= student.class %></td>
        <% unless archived? %>
        <% if student.is_enabled %>
          <td><%= link_to 'Deactivate', {controller: :users, action: :change_is_enabled, id: student.m_id}, method: :post %></td>
        <% else %>
		  <td><%= link_to 'Activate', {controller: :users, action: :change_is_enabled, id: student.m_id}, method: :post %></td>
        <% end %>
        <% end %>
        <td><%= link_to 'Edit', edit_user_path(student.id) %></td>       
      </tr>
    <% end %>
  </tbody>
</table>
