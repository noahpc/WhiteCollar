<%= form_for(@user)  do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h2>
			<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
    <div class = "panel panel-primary">
      <div class = "panel-heading">
        <h3>&nbsp;New Teacher Information</h3>
      </div>
      <div class = "panel-body">

        <div id="full_name">
          <%= f.label :first_name, 'First Name', class: 'required' %>
          <%= f.text_field :first_name %>
          <%= f.label :last_name, 'Last Name', class: 'required' %>
          <%= f.text_field :last_name %>
        </div>
        <div id="school_info">
          <%= f.label :school_id, 'School ID', class: 'required' %>
          <%= f.text_field :school_id %>
          <%= f.label :email, 'E-mail Address', class: 'required' %>
          <%= f.text_field :email %>
        </div>
        <%= f.hidden_field :role, :value => 3 %>
        <br />
        <div class="actions">
          <% if @user.new_record? %>
            <%= f.submit  'Create Teacher', :class => 'btn btn-primary btn-sm' %>
          <% else %>
            <%= f.submit 'Update Teacher', :class => 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>

<% end %>

