<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <div class="field">
      <%= f.label :Year %><br>
      <%= f.label 'in XXXX format' %><br>
      <%= f.text_field :year %>
    </div>
    <div class="field">
      <%= f.label :semester %><br>
      <%= f.select :semester, options_for_select(%w[Fall Spring]) %>
    </div>
    <div class="field">
      <%= f.label :project_type_id %><br>
      <%= f.collection_select :project_type_id, ProjectType.all, :id, :name  %>
    </div>
    <div class="field">
      <%= f.label :project_start %><br>
      <%= f.text_field :project_start, :placeholder => "DD/MM/YYYY 00:00 AM/PM" %>
    </div>
    <div class="field">
      <%= f.label :project_end %><br>
      <%= f.text_field :project_end, :placeholder => "DD/MM/YYYY 00:00 AM/PM" %>
    </div>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_field :comment %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
